#include <algorithm>
#include <iostream>
#include <vector>
using namespace std;

template <class T>
void BubbleSort(vector<T> &v)
{
	int lastPositionSorted = v.size() - 1;
	bool swapped = false;
	do
	{
		swapped = false;
		for(unsigned int i = 0; i < lastPositionSorted; i++)
		{
			if(v[i] > v[i + 1])
			{
				swap(v[i], v[i + 1]);
				swapped = true;
			}
		}

		lastPositionSorted -= 1;

	} while(swapped);
}

int main()
{
	vector<int> v_test = {5,10,15,6,1,2,3,18};
	BubbleSort(v_test);
	for(int &e : v_test)
		cout << e << " ";

	return 0;
}




