#include <algorithm>
#include <iostream>
#include <vector>
using namespace std;

template <class T>
void SelectSort(vector<T> &v)
{
	int currentMin;
	int minPosition = 0;

	for(int i = 0; i < v.size(); i++)
	{
		currentMin = v[i];
		for(int j = i; j < v.size(); j++)
		{
			if(v[j] < currentMin)
			{
				currentMin = v[j];
				minPosition = j;
			}
		}

		swap(v[i], v[minPosition]);
		minPosition = i + 1;
	}
}

int main()
{
	//test vector of ints
	vector<int> v_ints = {12,5,2,10,9,6};
	SelectSort(v_ints);
	for(int &e : v_ints)
		cout << e << " ";
	cout << endl;
}


