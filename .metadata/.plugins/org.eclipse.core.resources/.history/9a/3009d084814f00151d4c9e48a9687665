#include <algorithm>
#include <iostream>
#include <vector>
using namespace std;

template <class T>
void SelectSort(vector<T> &v)
{
	int currentMin = v[0];
	int minPosition;

	for(int i = 0; i < v.size(); i++)
	{
		for(int j = i; j < v.size(); j++)
		{
			if(v[j] < currentMin)
			{
				currentMin = v[j];
				minPosition = j;
			}
		}

		swap(v[i], v[minPosition]);
	}

}


