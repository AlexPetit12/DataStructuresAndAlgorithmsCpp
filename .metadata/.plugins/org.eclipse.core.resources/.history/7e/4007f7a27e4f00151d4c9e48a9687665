#include <algorithm>
#include <iostream>
#include <vector>
using namespace std;

void BubbleSort(vector<int> &v)
{
	bool swapped = false;;
	do
	{
		swapped = false;
		for(int i = 0; i < v.size() - 1; i++)
		{
			if(v[i] > v[i + 1])
			{
				swap(v[i], v[i + 1]);
				swapped = true;
			}
		}
	} while(swapped);
}

int main()
{
	vector<int> v_test = {5,10,15,6,1,2,3,18};
	BubbleSort(v_test);
	for(int &e : v_test)
		cout << e << " ";

	return 0;
}




